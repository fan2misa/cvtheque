{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="card m-auto w-25">
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label for="email">Identifiant</label>
                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Votre adresse email">
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" class="form-control" id="password" placeholder="Votre mot de passe">
                </div>
                <button type="submit" class="btn btn-primary">
                    Connexion
                </button>
            </form>
        </div>
    </div>
{% endblock %}
