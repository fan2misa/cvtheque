<div class="card">
    <div class="card-body">
        <div class="media">
            <img class="mr-3" src="{{ user.avatar | media_resize('user.avatar.filter') }}" alt="Generic placeholder image">
            <div class="media-body">
                <h1 class="mt-0">{{ user.fullname }}</h1>
                <dl>
                    <dd>{{ user.cvs | length }} CV</dd>
                </dl>
                <a href="{{ path('cv_ajouter') }}" class="btn btn-primary btn-lg btn-block" role="button" data-toggle="modal" data-target="#modal-ajouter-cv">Ajouter un CV</a>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="modal-ajouter-cv" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        {{ form_start(form, { 'action': path('cv_ajouter') }) }}
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ajouter un nouveau CV</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    {{ form_row(form.nom) }}
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>